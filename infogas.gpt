algoritmo infogas03;

variáveis
    t:real;
    n:inteiro;
    hi:real;
    h:real;
    hn:real;
    mini:real;
    minn:real;
    min:real;
    gi:real;
    gn:real;
    g:real;
    vm:real;
    gc:real;
    odo:real;
    odon:real;
    odoi:real;
    i:inteiro;
    s:real;
    km:real;
    temp:real;
    htemp:inteiro;
    mintemp:inteiro;
    tempomin:real;

fim-variáveis

início
    imprima("Instrucoes");
    imprima("A hora deve ser colocada em HH e dps MM como solicitado");
    imprima("O odometro deve estar em Km");
    imprima("O volume do tanque em L");
    imprima("Digite o Numero de paradas que voce fara no caminho: ");
    n:=leia();
    imprima("Digite as horas: ");
    hi:=leia();
    imprima("Digite os minutos: ");
    mini:=leia();
    imprima("Digite o odometro atual do carro: ");
    odoi:=leia();
    imprima("Digite o Volume atual do tanque de combustivel: ");
    gi:=leia();
    imprima("Distancia a ser percorrida: ");
    km:=leia();
    minn:=mini;
    odon:=odoi;
    hn:=hi;
    gn:=gn+gi;
    para i de 1 até n passo 1 faça
        imprima("Parada: ", i);
        imprima("Que horas sao?: ");
        h:=leia();
        imprima("Que minutos sao?: ");
        min:=leia();
        imprima("Qual o valor atual do odometro?: ");
        odo:=leia();
        imprima("Volume atual do tanque de combustivel?: ");
        g:=leia();
        imprima("Foi abastecido quantos litros de combustivel?: ");
        gc:=leia();
        t:=(min-minn)/60.0;
        se minn>min então
            t:=t*-1;
            t:=t-1;
        fim-se
        se minn>min então
            tempomin:=min+60-minn;
            tempomin:=tempomin+((h-1)-hn)*60;
        fim-se
        t:=t+(h-hn);
        s:=odo-odon;
        imprima("Distancia: ", s);
        imprima("Tempo: ", t);
        odon:=odo;
        hn:=h;
        minn:=min;
        gn:=gn-(gn-g);
        imprima("Velocidade Media Parcial: ",(s/t),"Km/h");
        imprima("Consumo de combustivel: ",(s/gn),"Km/L");
        km:=km-s;
        temp:=km/(s/t);
        gn:=gn+gc;
        htemp:=temp;
        mintemp:=(temp-htemp)*60;
        imprima("Previsao de chegada: ",htemp,":",mintemp);
        
    fim-para

fim


